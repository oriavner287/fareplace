{
    "strict": true,
    "compilerOptions": {
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@src/*": ["./src/*"],
            "@styles/*": ["./src/styles/*"],
            "@fonts/*": ["./src/public/fonts/*"]
        },
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
